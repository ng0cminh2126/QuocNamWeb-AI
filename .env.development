# ==========================================
# ENVIRONMENT CONFIGURATION
# ==========================================
# Single .env file cho cả development và production
# 
# Build commands tự động detect environment:
#   npm run dev                    → development (VITE_DEV_* URLs)
#   npm run build                  → production (VITE_PROD_* URLs)
#   npm run build --mode development → development build
# ==========================================

# ==========================================
# CURRENT ENVIRONMENT
# ==========================================
# Auto-detected by Vite based on --mode flag
# development: npm run dev, npm run build:dev
# production: npm run build
# ==========================================

# VITE_APP_ENV=development  # Optional: force override

# ==========================================
# DEVELOPMENT ENVIRONMENT - API ENDPOINTS
# ==========================================

# Chat Service (Development)
VITE_DEV_CHAT_API_URL=https://vega-chat-api-dev.allianceitsc.com

# Auth/Identity Service (Development)
VITE_DEV_AUTH_API_URL=https://vega-identity-api-dev.allianceitsc.com

# Task Service (Development) - Optional
VITE_DEV_TASK_API_URL=https://vega-task-api-dev.allianceitsc.com

# ==========================================
# PRODUCTION ENVIRONMENT - API ENDPOINTS
# ==========================================

# Chat Service (Production)
VITE_PROD_CHAT_API_URL=https://vega-chat-api.allianceitsc.com

# Auth/Identity Service (Production)
VITE_PROD_AUTH_API_URL=https://vega-identity-api.allianceitsc.com

# Task Service (Production) - Optional
VITE_PROD_TASK_API_URL=https://vega-task-api.allianceitsc.com

# ==========================================
# FEATURE FLAGS (Environment-specific)
# ==========================================

# Development Feature Flags
VITE_DEV_ENABLE_SIGNALR=true
VITE_DEV_ENABLE_DEBUG_LOGS=true
VITE_DEV_ENABLE_REACT_QUERY_DEVTOOLS=true

# Production Feature Flags
VITE_PROD_ENABLE_SIGNALR=true
VITE_PROD_ENABLE_DEBUG_LOGS=false
VITE_PROD_ENABLE_REACT_QUERY_DEVTOOLS=false

# ==========================================
# SIGNALR HUB URLs (for realtime)
# ==========================================
# SignalR Hub uses the Chat API base URL + /hubs/chat

# Development SignalR Hub
VITE_DEV_SIGNALR_HUB_URL=https://vega-chat-api-dev.allianceitsc.com/hubs/chat

# Production SignalR Hub
VITE_PROD_SIGNALR_HUB_URL=https://vega-chat-api.allianceitsc.com/hubs/chat
